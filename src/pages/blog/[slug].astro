---
import BaseLayout from "../../components/BaseLayout.astro";
import formatDate from "../../utils/format-date.js";
import CallToAction from "../../components/CallToAction.astro";
import TrackScrolling from "../../components/TrackScrolling.astro";

export async function getStaticPaths() {
  const posts = await Astro.glob("./blog-posts/*.md");
  return posts.map(p => ({
    params: { slug: p.file.split("/").pop().split(".").shift() },
    props: { post: p },
  }));
}

const { Content, frontmatter } = Astro.props.post;
const { title, description, publishDate, image, cta } = frontmatter;
const { slug } = Astro.props.post.file.split("/").pop().split(".").shift()
const permalink = `${Astro.site.href}blog/${slug}`;
---

<BaseLayout title={title} description={description} permalink={permalink} current="blog">
  <header>
    <p>{formatDate(publishDate)}</p>
    <h1>{title}</h1>
    <hr />
  </header>
  <div class="container">
    {image && <img src={`/assets/blog/${image}`}>}
    <article class="content">
      <Content />
    </article>
    {cta &&
      <hr>
      <CallToAction cta={cta}/>
    }
  </div>
  <TrackScrolling/>
</BaseLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }
</style>
